@inherits LayoutComponentBase
@using MudBlazor
<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />


<MudLayout>

    <!-- Top App Bar -->
    <MudAppBar Elevation="1" Color="Color.Primary">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Edge="Edge.Start" />
        <MudText Typo="Typo.h6">Bomberman Dashboard</MudText>
    </MudAppBar>

    <!-- Main layout below the AppBar -->
    <MudContainer MaxWidth="MaxWidth.False" Class="d-flex">
        <!-- Sidebar / NavMenu -->
        <NavMenu />

        <!-- Main Page Content -->
        <MudMainContent Class="p-4">
            @Body
        </MudMainContent>
    </MudContainer>

</MudLayout>
