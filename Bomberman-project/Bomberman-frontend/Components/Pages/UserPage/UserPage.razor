@page "/userPage"

<MudCard Outlined="true">
    <MudCardHeader>
        @* <MudText Typo="Typo.h2">Settings</MudText> *@

        <ul>
            <MudButton OnClick="@(() => page = PageEnum.Settings)" Variant="Variant.Text" Color="Color.Primary">User settings</MudButton>

            <MudButton OnClick="@(() => page = PageEnum.ArduinoSettings)" Variant="Variant.Text" Color="Color.Primary">Device settings</MudButton>
        </ul>
    </MudCardHeader>
    @if (page == PageEnum.Settings)
    {
        <MudCardContent>
            <MudText Typo="Typo.h3">User settings:</MudText>
        </MudCardContent>
        <MudCardContent>
            <SettingsComponent />
        </MudCardContent>
    }
    @if (page == PageEnum.ArduinoSettings)
    {
        <MudCardContent>
            <MudText Typo="Typo.h3">Device settings:</MudText>
        </MudCardContent>
        <MudCardContent>
            <ArduinoSettingsComponent />
        </MudCardContent>
    }
</MudCard>




@code {
    private PageEnum page = PageEnum.Settings;

    public enum PageEnum
    {
        Settings,
        ArduinoSettings
    }
}
